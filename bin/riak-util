BINDIR=$(dirname $0)

NARGS=$#
if [ ${NARGS} -lt 1 ]; then
    echo "Syntax: ${0} <cmd> <args>"
    exit 1
fi

CMD=${1}
shift

if [ "${CMD}" == "help" ]; then
    CMDS=$(for i in $(ls ${BINDIR}/*.py | grep -v riak_utils); do echo "$(basename $i .py)"; done)
    echo "Commands: \n\t"; echo $CMDS
    echo
    exit 0
fi

if [ ! -e "${BINDIR}/${CMD}.py" ] ; then
    echo "No such command: $CMD"
    exit 1
fi


exec python ${BINDIR}/${CMD}.py $@